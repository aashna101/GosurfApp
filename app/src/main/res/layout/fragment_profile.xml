<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/t2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_below="@+id/t2"
        android:id="@+id/ll1">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:src="@drawable/lklklklk"
    android:layout_weight="4"
    android:id="@+id/circleImg"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5"
        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textStyle="bold"
        android:id="@+id/name"
        android:layout_weight="1"
        android:hint="Name:"
        android:textSize="25sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Location:"
        android:textSize="25sp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:id="@+id/location"
        android:drawableRight="@drawable/ic_mode_edit_black_24dp"
        android:drawableEnd="@drawable/ic_mode_edit_black_24dp"
        />

    </LinearLayout>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="other info like coach trainer user or camp"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:layout_below="@+id/ll1"/>


</RelativeLayout>